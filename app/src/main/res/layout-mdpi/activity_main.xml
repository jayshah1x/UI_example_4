<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/ic_background" >


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/ic_logo"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/log_in"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:text="LOG IN"
        android:textColor="#FEF7E4"
        android:textSize="22dp"></TextView>

    <EditText
        android:id="@+id/username"
        android:layout_width="300dp"
        android:layout_height="38dp"
        android:layout_below="@+id/log_in"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/yellow"
        android:hint="                             Username"
        android:textColor="#FEF7E4"
        android:textColorHint="#fef7e4"
        android:textSize="12dp"></EditText>

    <EditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="38dp"
        android:layout_below="@+id/username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/yellow"
        android:hint="                      Password "
        android:inputType="textPassword"
        android:textColor="#FEF7E4"
        android:textColorHint="#FEF7E4"
        android:textSize="12dp"></EditText>

    <CheckBox
        android:id="@+id/remember"
        android:layout_width="118dp"
        android:layout_height="20dp"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="1dp"
        android:buttonTint="@color/yellow"
        android:text="Remember Password  |"
        android:textColor="#FEF7E4"

        android:textSize="8dp"
        ></CheckBox>

    <Switch
        android:id="@+id/Switch"
        android:layout_width="50dp"
        android:layout_height="12dp"
        android:layout_below="@id/password"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-3dp"
        android:layout_toRightOf="@id/remember"
        android:backgroundTint="@color/yellow"
        android:checked="false"
        android:textColor="#FEF7E4"
        android:theme="@style/SwitchTheme"></Switch>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_toRightOf="@+id/Switch"
        android:text="Administrator"
        android:textColor="#FEF7E4"

        android:textSize="10dp"
        ></TextView>

    <Button
        android:id="@+id/login"
        android:layout_width="75dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/password"
        android:layout_marginTop="50dp"
        android:text="GO"
        android:textColor="#233849"
        android:background="@drawable/custom_button"
        ></Button>

    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/login"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="#FEF7E4"
        android:paddingBottom="10dp"
        android:text="Don't have account? Register"
        android:textColor="#233849"></Button>
</RelativeLayout>

